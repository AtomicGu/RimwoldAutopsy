    <skillRequirements>
      <Medicine>8</Medicine>
    </skillRequirements>
    <researchPrerequisite>AdvancedAutopsy</researchPrerequisite>
  </RecipeDef>

  <RecipeDef>
    <defName>AutopsyGlitterworld</defName>
    <label>medically perserve organs with medicine</label>
    <description>Through pristine quality supplies and training, you can harvest the organs with the success chance as in the core worlds.</description>
    <jobString>Surgery.</jobString>
    <workAmount>2500</workAmount>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <workerClass>Autopsy.Patches.AutopsyWorker</workerClass>
    <workSkill>Medicine</workSkill>
    <workSkillLearnFactor>25</workSkillLearnFactor>
    <effectWorking>Surgery</effectWorking>
    <soundWorking>Recipe_Surgery</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>CorpsesHumanlike</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Medicine</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
        <li>Medicine</li>
      </categories>
      <specialFiltersToAllow>
        <li>PossibleToHarvest</li>
      </specialFiltersToAllow>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
        <li>ImpossibleToHarvest</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Human_Corpse</li>
      </thingDefs>
      <specialFiltersToAllow>
        <li>AllowCorpsesColonist</li>
        <li>AllowCorpsesStranger</li>
      </specialFiltersToAllow>
    </defaultIngredientFilter>
    <skillRequirements>
      <Medicine>15</Medicine>
    </skillRequirements>
    <researchPrerequisite>GlitterworldAutopsy</researchPrerequisite>
  </RecipeDef>

  <RecipeDef>
    <defName>AutopsyAnimal</defName>
    <label>Retrieve bionics from animal</label>
    <description>Medically extract bionics from the animal.</description>
    <jobString>Surgery.</jobString>
    <workAmount>2000</workAmount>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <workSkill>Medicine</workSkill>
    <workSkillLearnFactor>10</workSkillLearnFactor>
    <workerClass>Autopsy.Patches.AutopsyWorker</workerClass>
    <effectWorking>Surgery</effectWorking>
    <soundWorking>Recipe_Surgery</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>CorpsesAnimal</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesAnimal</li>
      </categories>
      <exceptedCategories>
        <li>CorpsesMechanoid</li>
      </exceptedCategories>
      <specialFiltersToAllow>
        <li>PossibleToHarvestAnimal</li>
      </specialFiltersToAllow>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
        <li>ImpossibleToHarvestAnimal</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>CorpsesAnimal</li>
      </categories>
    </defaultIngredientFilter>
    <skillRequirements>
      <Medicine>5</Medicine>
    </skillRequirements>
    <researchPrerequisite>AnimalAutopsy</researchPrerequisite>
  </RecipeDef>

  <RecipeDef>
    <defName>BurnBodyParts</defName>
    <label>burn body parts</label>
    <description>Burn natural body parts to completely destroy them.</description>
    <jobString>Burning body parts.</jobString>
    <workAmount>40</workAmount>
    <requiredGiverWorkType>Hauling</requiredGiverWorkType>
    <effectWorking>BurnDrug</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <conceptLearned>DrugBurning</conceptLearned>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>BodyPartsNatural</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>BodyPartsNatural</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>Campfire</li>
      <li>ElectricCrematorium</li>
    </recipeUsers>
  </RecipeDef>

</Defs>