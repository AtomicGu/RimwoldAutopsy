<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="FurnitureBase">
    <defName>TableAutopsy</defName>
    <label>autopsy table</label>
    <Description>A table specially designed for deceased people. Allows for surgical removal of organs.</Description>
    <ThingClass>Building_WorkTable</ThingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Bed/HospitalBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,4)</drawSize>
    </graphicData>
    <AltitudeLayer>Building</AltitudeLayer>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>2850</WorkToBuild>
      <Mass>45</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <Size>(1,2)</Size>
	<DesignationCategory>Production</DesignationCategory>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <costList>
      <Steel>80</Steel>
    </costList>
	<hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
	<recipes>
		<li>AutopsyBasic</li>
		<li>AutopsyAdvanced</li>
		<li>AutopsyGlitterworld</li>
	</recipes>
	<inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <Bed_ShowSleeperBody>True</Bed_ShowSleeperBody>
      <bed_healPerDay>9</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
	  <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <fillPercent>0.4</fillPercent>
    <PathCost>60</PathCost>
    <LeaveResourcesWhenKilled>True</LeaveResourcesWhenKilled>
    <StaticSunShadowHeight>0.17</StaticSunShadowHeight>
    <CastEdgeShadows>True</CastEdgeShadows>
    <designationHotkey>Misc5</designationHotkey>
    <Passability>PassThroughOnly</Passability>
    <DrawGUIOverlay>True</DrawGUIOverlay>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites><li>AdvancedAutopsy</li></researchPrerequisites>
  </ThingDef>
  
</ThingDefs>